{# @var craft \craft\web\twig\variables\CraftVariable #}
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Styleguide</title>
  <link href="//fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic|Open+Sans+Condensed:300" rel="stylesheet" type="text/css">
</head>
<body>
<h1>{{ siteName }} Styleguide</h1>
Hello from the Plugin Styleguide!

<div id="styleguide">
  <styleguide></styleguide>
</div>

<script>
  window.filelist = {{ templates | json_encode | raw }}
</script>

{# for dev, needs webpack-dev-server running #}
{% if craft.config.devMode %}
<script src="https://localhost:8080/js/Craft3Gonzo.js"></script>
  {% else %}
    {# production build #}
  <script
      src="{{ view.getAssetManager().getPublishedUrl('@martinherweg/craft3gonzo/assetbundles/gonzo/dist') }}/js/Craft3Gonzo.js"></script>
{% endif %}
</body>
</html>
